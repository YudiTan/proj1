<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<%= button_to "Create Pokemon!", new_path(id: @trainer.id), :class => "button medium", :method => :get %>
<p> Pokemons: </p>
  <ol>
    <% @trainer.pokemons.each do |p| %>
      <li> <%= p.name %></li>
      <%= button_to "Damage!", damage_path(id: p.id), :class => "button medium", :method => :patch %>

      <ul>
        <li>Level: <%= p.level %></li>
        <li>Health: <%= p.health %></li>
      </ul>
    <% end %>
  </ol>
